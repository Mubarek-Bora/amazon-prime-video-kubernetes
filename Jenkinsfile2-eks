pipeline {
    agent any     

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from GitHub') {
            steps {
                git branch: 'main', url: 'https://github.com/Mubarek-Bora/amazon-prime-video-kubernetes.git'
            }
        }

        stage('Deploy to EKS Cluster') {
            steps {
                // Use AWS credentials securely
                withAWS(credentials: 'aws-eks-creds', region: 'us-west-2') {
                    dir('kubernetes') {
                        sh '''
                        set -e  # stop on first error
                        echo "üîπ Verifying AWS credentials..."
                        aws sts get-caller-identity

                        echo "üîπ Configuring kubectl for EKS cluster..."
                        aws eks update-kubeconfig --region us-west-2 --name muba-eks-cluster

                        echo "üîπ Verifying kubeconfig..."
                        kubectl config current-context
                        kubectl get nodes || echo "‚ö†Ô∏è No nodes found (check cluster connection)"

                        echo "üîπ Deploying application to EKS..."
                        kubectl apply -f manifest.yml

                        echo "üîπ Verifying deployment..."
                        kubectl get pods -o wide
                        kubectl get svc
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                def buildStatus = currentBuild.currentResult
                emailext(
                    subject: "Pipeline ${buildStatus}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: """
                        <p><strong>Project:</strong> ${env.JOB_NAME}</p>
                        <p><strong>Build Number:</strong> ${env.BUILD_NUMBER}</p>
                        <p><strong>Build Status:</strong> ${buildStatus}</p>
                        <p><strong>Build URL:</strong> <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                    """,
                    to: 'maol2ga@gmail.com',
                    from: 'maol2ga@gmail.com',
                    replyTo: 'maol2ga@gmail.com',
                    mimeType: 'text/html'
                )
            }
        }
    }
}

